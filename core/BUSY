			}
			.sources += [ 
				./qeventdispatcher_unix.cpp 
				./qtimerinfo_unix.cpp
			]
		}
	}else{
		.sources += [
			./NoObject.cpp
		]
	}
	
	if ^HAVE_ZLIB {
		.deps += zlib.sources;
		.sources += [
			./qcompress.cpp
		]
	}
	
	.configs += [ config lib_config ]
	
	if ^HAVE_OBJECT {
		.deps += run_moc
	}
}


